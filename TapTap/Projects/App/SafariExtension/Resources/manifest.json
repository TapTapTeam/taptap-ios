{
  "manifest_version": 3,
  "name": "탭탭",
  "description": "Safari에서 읽는 기사에 바로 하이라이트와 메모를 남겨보세요",
  "version": "1.0",
  
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png",
    "256": "icon-256.png",
    "512": "icon-512.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
      "js": [ "bootstrap.js", "gesture.js", "sentence.js", "highlight.js", "tooltip.js", "memo.js", "custom-alert.js" ],
      "matches": [ "<all_urls>" ]
  }],

  "web_accessible_resources": [{
      "resources": [ "tooltip.css", "memo.css", "custom-alert.css" ],
      "matches": [ "<all_urls>" ]
  }],

  "action": {
      "default_popup": "popup.html",
      "default_icon": "images/toolbar-icon.svg"
  },

  "permissions": ["storage"]
}
